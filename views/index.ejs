<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>URL Shortener</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>

      <form action="/shorten" method="post">
        <label for="fullUrl">Enter URL:</label>
        <input type="text" name="fullUrl" id="fullUrl" required />
        <label for="name">Enter a name for the short URL:</label>
        <input type="text" name="name" id="name" required />
        <button type="submit">Shorten</button>
      </form>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
            <th>Update</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach(url => { %>
          <tr>
            <td><%=url.name %></td>

            <td>
              <a href="<%= url.fullUrl %>" target="_blank"
                ><%= url.fullUrl %></a
              >
            </td>

            <td>
              <a href="<%= url.shortUrl %>" target="_blank"
                ><%= url.shortUrl %></a
              >
            </td>
            <td><%= url.clicks %></td>
            <td>
              <form action="/update/<%= url.shortUrl %>" method="post">
                <input type="text" name="newFullUrl" required />
                <button type="submit">Update</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
