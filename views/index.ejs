<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>URL Shortener</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>

      <form id="shortenForm">
        <label for="fullUrl">Enter URL:</label>
        <input type="text" name="fullUrl" id="fullUrl" required />
        <label for="name">Enter a name for the short URL:</label>
        <input type="text" name="name" id="name" required />
        <button type="submit">Shorten</button>
      </form>

      <div id="message"></div>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
            <th>Update</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach(url => { %>
          <tr>
            <td><%=url.name %></td>

            <td>
              <a href="<%= url.fullUrl %>" target="_blank"
                ><%= url.fullUrl %></a
              >
            </td>

            <td>
              <a href="<%= url.shortUrl %>" target="_blank"
                ><%= url.shortUrl %></a
              >
            </td>
            <td><%= url.clicks %></td>
            <td>
              <form class="updateForm" data-shorturl="<%= url.shortUrl %>">
                <input type="text" name="newFullUrl" required />
                <button type="submit">Update</button>
              </form>
              <form class="deleteForm" data-shorturl="<%= url.shortUrl %>">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <script>
      $(document).ready(function () {
        $("#shortenForm").on("submit", function (e) {
          e.preventDefault();
          $.ajax({
            url: "/shorten",
            method: "POST",
            data: {
              fullUrl: $("#fullUrl").val(),
              name: $("#name").val(),
            },
            success: function () {
              location.reload();
            },
          });
        });

        $(".updateForm").on("submit", function (e) {
          e.preventDefault();

          var shortUrl = $(this).data("shorturl");
          var newFullUrl = $(this).find('input[name="newFullUrl"]').val();

          $.ajax({
            url: "/update/" + shortUrl,
            method: "POST",
            data: {
              newFullUrl: newFullUrl,
            },
            success: function () {
              location.reload();
            },
          });
        });

        $(".deleteForm").on("submit", function (e) {
          e.preventDefault();

          var shortUrl = $(this).data("shorturl");

          $.ajax({
            url: "/delete/" + shortUrl,
            method: "POST",
            success: function () {
              location.reload();
            },
          });
        });
      });
    </script>
  </body>
</html>
